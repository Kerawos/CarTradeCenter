@model IEnumerable<CarTradeCenter.Data.Vehicle>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Samochody uszkodzone</h1>

<p>
    <a asp-action="CreateAutoAxa">Dodaj Nowy Axa</a>
</p>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Zdjecie</th>
            <th>Koniec Aukcji</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
        <tr>
            <td>@car.Title</td>
            <td> <img src="@car.GetImageMiniUrl()" class="img-thumbnail" style="width: 40%"> </td>
            <td>@car.DateAuctionEnd</td>
            @*<td> <a asp-action="Details" asp-route-id="@car.Id">Detale</a></td>*@
            <td> <a href="@car.Url">Oryginalna Aukcja</a></td>
            <td> <a asp-action="Usuń Aukcje" asp-route-id="@car.Id" onclick="confirm('Czy jestes pewien ze chcesz usunac?')">Usun</a></td>
        </tr>
        }
    </tbody>
</table>

